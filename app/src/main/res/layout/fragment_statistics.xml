<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.Admin.StatisticsFragmentAdmin">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tvFavourite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:textColor="@color/black2B2B2B"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Month/Year:"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_semibold"
            android:textSize="18sp"/>
        <Spinner
            android:layout_marginStart="5dp"
            android:id="@+id/monthSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="/"
            android:fontFamily="@font/raleway_semibold"/>
        <Spinner
            android:id="@+id/yearSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoes Revenue"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_bold"
            android:textSize="20sp"/>
    <com.github.mikephil.charting.charts.PieChart
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/productChart"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Year:"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/yearSpinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtRevenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenue In"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_bold"
            android:textSize="20sp"/>
        <com.github.mikephil.charting.charts.BarChart
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:id="@+id/barChart"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/black"
            android:text="Top Customer: "/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topUser"
            tools:listitem="@layout/item_top_user"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>